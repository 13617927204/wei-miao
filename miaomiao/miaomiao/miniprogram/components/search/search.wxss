/* components/search/search.wxss */
.container{position: fixed;left: 0;top: 0;width:100%;height:90rpx;z-index: 9999;overflow: hidden;}
.containerFocus{position: fixed;left: 0;top: 0;width:100%;height:100%;z-index: 9999;overflow: hidden;background: white;}
.search{display: flex;align-items:center;padding: 20rpx 30rpx;height: 60rpx;}
.search-text{display: flex;align-items: center;border: 2rpx grey solid;border-radius: 30rpx;flex: 7;height: 60rpx;}
.search-text text{margin:0 10rpx;}
.search-text input{width:100%}
.search-text-input{opacity: .3;}

.search-btn{flex: 1;text-align: center;height: 60rpx;}

.history{padding: 0 30rpx;}
.history-head{display: flex;justify-content: space-between;}

.history-text{margin-top: 30rpx;}
.history-text text{padding:10rpx 20rpx;border:2rpx solid #e6e6e6;border-radius: 30rpx;background: #e6e6e6;margin: 10rpx 20rpx;}

.history-item-text image{width:80rpx;height:80rpx;margin-right: 10rpx;border-radius: 50%;}
.history-item{display: flex;justify-content:space-between;align-items: center;margin:10rpx 0;height:100rpx;padding:20rpx 30rpx;}
.history-item .history-item-text{display: flex;align-items: center;}